{
    "type": "ModuleConfig",
    "params": {
        "_WATCHLIST": [
            "list",
            [
                "NAME"
            ],
            "watchlist"
        ],
        "NAME": [
            "str",
            "Default",
            "module name"
        ]
    },
    "actions": {
        "test": {
            "type": "os",
            "command": "echo '%USER% %NAME%'",
            "description": "echo random info",
            "arguments": {
                "%USER%": [
                    "appconf",
                    "USER",
                    false
                ],
                "%NAME%": [
                    "modconf",
                    "NAME",
                    true
                ]
            }
        },
        "lswdir": {
            "type": "os",
            "command": "ls %WDIR%",
            "description": "ls workdir",
            "arguments": {
                "%WDIR%": [
                    "appconf",
                    "WORKDIR",
                    true
                ]
            }
        },
        "ip": {
            "type": "os",
            "command": "ifconfig -a | grep -E -a -o \"[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\" | head -1",
            "description": "get current machine ip",
            "arguments": {}
        }
    },
    "pipes": {
        "test_pipe": [
            [
                "self",
                "lswdir",
                false,
                false
            ],
            [
                "self",
                "test",
                true,
                true,
                "%NAME%"
            ]
        ],
        "selfip": [
            [
                "self",
                "ip",
                false,
                false
            ],
            [
                "app",
                "set LIP %PIPE%",
                true,
                true
            ]
        ]
    }
}